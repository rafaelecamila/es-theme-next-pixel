<theme>

	<formatVersion>4</formatVersion>	
	<include>./common.xml</include>

	<feature supported="carousel">

		<view name="system">

			<image name="system_carousel_background" extra="true">
				<origin>1 .5</origin>
				<pos>1 .5</pos>
				<maxSize>2 1</maxSize>
				<path>./../arts/system_carousel_vertical_wheel_background.png</path>
			</image>

			<carousel name="systemcarousel">
				<type>vertical_wheel</type>
				<pos>.874 .5</pos>
				<origin>1 .5</origin>
				<size>1 1</size>
				<logoRotation>-8</logoRotation>
				<logoRotationOrigin>3.9 .5</logoRotationOrigin>
				<maxLogoCount>7</maxLogoCount>
				<logoAlignment>right</logoAlignment>
				<defaultTransition>instant</defaultTransition>
			</carousel>

			<image name="system_carousel_border" extra="true">
				<origin>1 .5</origin>
				<maxSize>2 1</maxSize>
				<pos>.998 .5</pos>
				<path>./../arts/system_carousel_vertical_wheel_border.png</path>
			</image>

		</view>

	</feature>

	<view name="system">

		<image name="background" extra="true">
			<origin>1 .5</origin>
			<pos>1 .5</pos>
			<path>./../../$system/background_wheel.jpg</path>
		</image>

		<image name="logo">
			<path>./../../$system/data/logo_right.svg</path>
		</image> 

		<image name="logo" region="eu">
			<path>./../../$system/data/eu/logo_right.svg</path>
		</image> 

		<image name="logo" region="us">
			<path>./../../$system/data/us/logo_right.svg</path>
		</image> 

		<image name="logo" region="jp">
			<path>./../../$system/data/jp/logo_right.svg</path>
		</image>

		<image name="console" extra="true">
			<pos>.9 .55</pos>
			<maxSize>.15 .24</maxSize>
			<origin>.5 1</origin>
		</image>

	</view>

</theme>